{
    "compilerOptions": {
        "outDir": "./dist/",
        "module": "ESNext",
        "target": "es5",
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "plugins": [{ "name": "typescript-plugin-css-modules" }],
        "baseUrl": ".",
        "paths": {
            "*": ["./src/*"]
        },
        "strict": true,
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "include": ["./config/jest/setup-jest.ts", "src"]
}

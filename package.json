        "css-loader": "^7.1.2",
        "eslint": "^9.9.0",
        "eslint-plugin-i18next": "^6.0.9",
        "eslint-plugin-react": "^7.35.0",
        "eslint-plugin-storybook": "^0.8.0",
        "globals": "^15.9.0",
        "html-webpack-plugin": "^5.6.0",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "loki": "^0.35.0",
        "mini-css-extract-plugin": "^2.9.0",
        "prettier": "3.3.3",
        "reg-cli": "^0.18.7",
        "sass": "^1.77.8",
